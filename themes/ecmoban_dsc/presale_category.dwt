<body>
<!-- #BeginLibraryItem "/library/page_header_presale_index.lbi" --><!-- #EndLibraryItem -->
{* ECSHOP presale_banner_category.lbi，显示首页分类小广告 *}{insert name='get_adv_child' ad_arr=$presale_banner_category}

<div class="preSale-filter">
    <div id="filter">
        <div class="filter-section-wrapper mb-component mt-component w1200 mt20">
            <div class="component-filter component-filter-category">
                <div class="filter-label-list">
                    <div class="label">分类：</div>

                    <div class="filter-quanbu {if $pager.cid eq 0 } selected {/if}"><a href="presale.php?act=category&cid=0&status={$pager.status}&price_min={$price_min}&price_max={$price_max}&sort=shop_price&order={$pager.order}">全部</a></div>
                    <ul class="inline-block-list">
                    <!-- {foreach from=$pre_category item=category } 调用预售分类 -->
                        <li {if $pager.cid eq $category.cid }class="selected"{/if}><a href="presale.php?act=category&cid={$category.cid}&status={$pager.status}&price_min={$price_min}&price_max={$price_max}&sort={$pager.sort}&order={$pager.order}">{$category.c_name}</a></li>
                    <!-- {/foreach} -->
                    </ul>
                </div>
                <div class="filter-label-list">
                    <div class="label">排列：</div>
                    <div class="filter-quanbu {if $pager.sort eq 'act_id'}selected{/if}"><a href="presale.php?act=category&cid={$pager.cid}&status={$pager.status}&price_min={$pager.price_min}&price_max={$pager.price_max}&order={$pager.order}">默认</a></div>
                    <ul class="inline-block-list">
                        <li {if $pager.sort eq 'shop_price'}class="selected"{/if}><a href="presale.php?act=category&cid={$pager.cid}&status={$pager.status}&price_min={$pager.price_min}&price_max={$pager.price_max}&sort=shop_price&order={$pager.order}">价格</a></li>
                        <li {if $pager.sort eq 'start_time'}class="selected"{/if}><a href="presale.php?act=category&cid={$pager.cid}&status={$pager.status}&price_min={$pager.price_min}&price_max={$pager.price_max}&sort=start_time&order={$pager.order}">新品</a></li>
                    </ul>
                </div>
                <div class="filter-label-list">
                    <div class="label">状态：</div>
                    <div class="filter-quanbu {if $pager.status eq 0 }selected{/if}"><a href="presale.php?act=category&cid={$pager.cid}&status=0&price_min={$pager.price_min}&price_max={$pager.price_max}&sort={$pager.sort}&order={$pager.order}">全部</a></div>
                    <ul class="inline-block-list">
                        <li {if $pager.status eq 1 }class="selected"{/if}><a href="presale.php?act=category&cid={$pager.cid}&status=1&price_min={$pager.price_min}&price_max={$pager.price_max}&sort={$pager.sort}&order={$pager.order}">即将开始</a></li>
                        <li {if $pager.status eq 2 }class="selected"{/if}><a href="presale.php?act=category&cid={$pager.cid}&status=2&price_min={$pager.price_min}&price_max={$pager.price_max}&sort={$pager.sort}&order={$pager.order}">预约中</a></li>
                        <li {if $pager.status eq 3 }class="selected"{/if}><a href="presale.php?act=category&cid={$pager.cid}&status=3&price_min={$pager.price_min}&price_max={$pager.price_max}&sort={$pager.sort}&order={$pager.order}">已结束</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="content">
    <div class="w1200 pb40">
        <div class="special-item">
            <div class="special-product">
                <ul>
                <!-- {foreach from=$goods item=goods} -->
                    <li>
                        <div class="s-warp">
                            <div class="p-img"><a href="{$goods.url}" target="_blank"><img src="themes/ecmoban_dsc/images/loadGoods.gif" width="255" height="255" class="lazy" data-original="{$goods.thumb}"/></a></div>
                            <div class="p-name"><a href="{$goods.url}" target="_blank">{$goods.goods_name}</a></div>
                            <div class="p-info">
                                <div class="p-price">
                                    <span><em>￥</em>{$goods.shop_price}</span>
                                    <del><em>￥</em>{$goods.market_price}</del>
                                </div>
                                <div class="p-right">
                                    <span class="appointment">已有<em>{$goods.sales_volume}</em>人预约</span>
                                    <!-- {if $goods.no_start} -->
                                        <div class="time" data-time="{$goods.start_time_date}">
                                            距开始<span class="days">00</span>天&nbsp;<span class="hours">01</span>:<span class="minutes">56</span>:<span class="seconds">23</span>
                                        </div>
                                    <!-- {else} -->
                                        <div class="time" data-time="{$goods.end_time_date}">
                                            倒计时<span class="days">00</span>天&nbsp;<span class="hours">01</span>:<span class="minutes">56</span>:<span class="seconds">23</span>
                                        </div>
                                    <!-- {/if} -->
                                </div>
                            </div>
                        </div>
                    </li>
                    <!-- {/foreach} -->
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- #BeginLibraryItem "/library/page_footer.lbi" --><!-- #EndLibraryItem -->
{* ECSHOP 提醒您：动态载入user_menu_position.lbi，显示首页分类小广告 *}{insert name='user_menu_position'}
<script type="text/javascript" src="themes/ecmoban_dsc/js/jquery.purebox.js"></script>
<script type="text/javascript">
    $(".pre-banner").slide({titCell:".hd ul",mainCell:".bd ul",effect:"top",interTime:3500,delayTime:500,autoPlay:true,autoPage:true});
    //倒计时
    $(".time").each(function(){
        $(this).yomi();
    });
</script>
</body>
</html>
