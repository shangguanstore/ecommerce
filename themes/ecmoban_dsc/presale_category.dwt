<link href="{$ecs_css_path}" rel="stylesheet" type="text/css" />
<link href="themes/ecmoban_dsc/select.css" rel="stylesheet" type="text/css" />
<link rel="alternate" type="application/rss+xml" title="RSS|{$page_title}" href="{$feed_url}" />
