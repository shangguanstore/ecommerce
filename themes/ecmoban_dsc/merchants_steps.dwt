					{/if}
				{elseif $fields.otherForm eq 'dateTime'} 
					//日期
					{foreach from=$fields.dateTimeForm item=date key=dk}
						var dateTime_{$fields.textFields} = document.getElementById('{$fields.textFields}_{$dk}').value;
