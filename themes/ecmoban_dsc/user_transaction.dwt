                    $("#code_notice").removeClass().addClass("error");
                    $("#code_notice").html("<i></i>"+result.message);
                    msg += result.message + '\n';
                    
                    return false;
                }
                else
                {
                    // alert(location_href_url);
                    window.location.href=location_href_url;
                }
            }
        });
    }

