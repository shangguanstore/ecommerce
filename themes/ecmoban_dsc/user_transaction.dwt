                $("#self_num_notice").html("<i></i>"+"身份证号不能为空");
                msg += '身份证号不能为空' + '\n';
            }
            else
            {
                $("#self_num_notice").html("<i></i>");
            }
        }
        if(frm.elements['bank_name'])
