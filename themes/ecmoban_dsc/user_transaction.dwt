                //验证验证码是否正确
                $.ajax({
                    cache: false,
                    async: false,
                    type: 'GET',
                    data: { authCode: authCode },
                    url: "user.php?act=account_safe&type=change_password&verify=authcode",
                    success: function (res) {
                        var result = eval("("+res+")");
                        if (result.error)
                        {
                            $("#code_notice").removeClass().addClass("error");
                            $("#code_notice").html("<i></i>"+result.message);
