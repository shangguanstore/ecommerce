                $("#bank_card_notice").html("<i></i>"+"银行卡号不能为空");
                msg += '银行卡号不能为空' + '\n';
            }
            else
            {
                $("#bank_card_notice").html("<i></i>");
            }
        }
        //alert(msg)
        if (msg.length > 0)
        {
            return false;
        }
        else
        {
            return true;
        }
    }
