            $("input[name='SWFUpload_1111']").change(function(){
                    var upimgbox = $(this).parents(".upload-btn").prev();
                    var imgbigbox = $(this).parents(".upload-img-box").find(".img-bigbox");
                    var img_num = $(this).parents(".upload-img-box").find("em");
                    $(".myupload").ajaxSubmit({	
                            dataType:  'json',
                            success: function(data){
                                    if(data.error == 1){
                                            alert(data.msg);
                                    }else if(data.error == 2){
                                            alert(data.msg);
                                            location.href = "user.php";
                                    }else{
                                            upimgbox.html(data.content); //小图
                                            imgbigbox.find("img").attr("src", data.currentImg_path);
                                            imgbigbox.find("img").attr("data-imgId", data.currentImg_id);
                                            imgbigbox.show(); //大图
                                            img_num.html(data.imglist_count);
                                    }
                            }
