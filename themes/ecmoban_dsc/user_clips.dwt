    <script type="text/javascript">
        function get_coll_checkall(t, obj){
                var chk = $(t).is(":checked");
                var arr = new Array();

                if(chk == true){
                        $(".collcheck").each(function(index, element) {
                                $(element).prop({ checked : true});
								$(this).parent().addClass("order-checkbox-checked")
                                if($(element).val() != 0){
                                        arr.push($(element).val());
                                }
                        });
                }else{
                        $(".collcheck").each(function(index, element) {
                                $(element).prop({ checked : false});
								$(this).parent().removeClass("order-checkbox-checked")
                                arr.pop($(element).val());
                        });
                }

                $("input[name='" + obj + "']").val(arr);
        }

        function get_goods_check(t, obj){
            var strArr = new Array();
            var allgoods = $("input[name='" + obj + "']").val();

            if(allgoods != ''){
                    strArr = allgoods.split(',');
            }

            if($(t).is(':checked') == false){
                    strArr.splice($.inArray($(t).val(),strArr),1);
            }else{
                    strArr.push($(t).val());
            }

            $("input[name='" + obj + "']").val(strArr);
        }

        function alertBatchFollow(type){

            var length = $("input[name='goods_check']:checked").length;
			var foot = true;
			var ok_title, cl_title, divId;
			
			divId = "bacth_del_collection"; 
			
            if(length>0){
                var message = '';
                var goods_id = $("input[name='allgoods']").val();

                if(type == 0){
                    message = '您确实要关注所选商品吗？';
                }else if(type == 1){
                    message = '您确实要取消关注所选商品吗？';
                }else if(type == 2){
                    message = '您确实要删除关注所选商品吗？';
                }

                ok_title = "确定";
				cl_title = "取消";
            }else{
				message = "请选择关注商品";
				foot = false;
            }
			
			var content = '<div id="bacth_del_collection">' + 
								'<div class="tip-box icon-box">' +
									'<span class="warn-icon-wen m-icon"></span>' + 
									'<div class="item-fore">' +
										'<h3 class="ftx-04">' + message + '</h3>' +
									'</div>' +
								'</div>' +
							'</div>';
			
			pb({
				id:divId,
				title:"提示",
				width:445,
				height:58,
				ok_title:ok_title, 	//按钮名称
				cl_title:cl_title, 	//按钮名称
				content:content, 	//调取内容
				drag:false,
				foot:foot,
				onOk:function(){
					Ajax.call('user.php?act=ajax_BatchCancelFollow', 'goods_id=' + goods_id + '&type=' + type, function(data){
						location.href = 'user.php?act=collection_list';
					}, 'GET', 'JSON');
				}
			});	
			
			$('#' + divId + ' .ftx-04').css({'padding': '11px 0px 0px 10px'});
			$('#' + divId + ' .tip-box').css({
				'width': '330px',
				'height': '50px',
				'padding': '0px 0px 10px 0px'
			});
			
			$('#' + divId + ' .item-fore').css({
				'margin': '0px 0px 0px 47px'
			});
			
			$('#' + divId + ' .pb-bd').css({
				'padding-left': '65px'
			});
			
			$('#' + divId + ' .pb-ft .pb-ok').addClass('color_df3134');
        }
