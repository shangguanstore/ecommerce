			Ajax.call('comment.php?act=comm_order_goods', 'cmt=' + $.toJSON(cmt), commentSignOneResponse, 'POST', 'JSON');
		}
	});

	function commentSignOneResponse(result){
		
		var sign = '';
		if(result.sign > 0){
			sign = "&sign=" + result.sign;
		}
		
		var hrefCont = "user.php?act=comment_list" + sign;
		var comments_user_divId = "dialog_comments_user"; 
		var foot = false;
		var cBtn = false;
		var ok_title = "确认";
		var pb_div = '';
		var pb_div_class = 'warn-icon';
		
		if(result.error > 0){
			var pb_div_class = 'warn-icon';
			height = 58;
		}else{
			foot = true;
			pb_div = '<div class="ftx-03">您可以继续评论其它订单商品。</div>';
			var pb_div_class = 'warn-icon-ok';
			height = 78;
		}
		
		var content = '<div id="dialog_comments_user">' + 
							'<div class="tip-box icon-box">' +
								'<span class="' + pb_div_class + ' m-icon"></span>' + 
								'<div class="item-fore">' +
									'<h3 class="rem ftx-04">' + result.message + '</h3>' +
									pb_div +
								'</div>' +
							'</div>' +
						'</div>';
			
		pb({
			id:comments_user_divId,
			title:result.message_type,
			width:455,
			height:height,
			content:content, 	//调取内容
			ok_title:ok_title,
			drag:false,
			foot:foot,
			cl_cBtn:cBtn,
			onOk:function(){
				location.href = hrefCont;
			}
		});
		
		if(result.error == 0){
			$('#' + comments_user_divId + ' .pb-bd').css({
				'paddind' : '0px'
			});
			
			$('#' + comments_user_divId + ' .pb-ct .tip-box').css({
				'width' : '360px',
				'padding-top' : '12px',
				'top' : '16px'
			});
			
			$('#' + comments_user_divId + ' .pb-ct .item-fore h3').css({
				'line-height' : '18px'
			});
			
			$('#' + comments_user_divId + ' .pb-hd').addClass('hide');
		}
	}
