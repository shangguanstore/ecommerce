        function get_brands_checkall(t, obj){
                var chk = $(t).is(":checked");
                var arr = new Array();

                if(chk == true){
                        $(".collcheck").each(function(index, element) {
                                $(element).prop({ checked : true});
                                $(this).parent().addClass("order-checkbox-checked")
                                if($(element).val() != 0){
                                        arr.push($(element).val());
                                }
                        });
                }else{
                        $(".collcheck").each(function(index, element) {
                                $(element).prop({ checked : false});
                                $(this).parent().removeClass("order-checkbox-checked")
                                arr.pop($(element).val());
                        });
                }

                $("input[name='" + obj + "']").val(arr);
        }

        function get_brands_check(t, obj){
            var strArr = new Array();
            var allgoods = $("input[name='" + obj + "']").val();

            if(allgoods != ''){
                    strArr = allgoods.split(',');
            }

            if($(t).is(':checked') == false){
                    strArr.splice($.inArray($(t).val(),strArr),1);
            }else{
                    strArr.push($(t).val());
            }

            $("input[name='" + obj + "']").val(strArr);
        }
