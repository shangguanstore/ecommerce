                    $(this).parent().next().val(index);
                    $(this).parent().nextAll(".scoreerror").hide();
            })

            /*标签选择*/
            $(".tips-list input[type='checkbox']").click(function(){
                    if($(this).prop("checked")==true){
                            $(this).parent().addClass("selected");
                    }else{
                            $(this).parent().removeClass("selected");
                    }
            });

            $(".tag-item a").click(function(){
                    var $this = $(this),val='',recid='';
                    if($this.hasClass("tag-txt-selected")){
                            $this.removeClass("tag-txt-selected");
                    }else{
                            $this.addClass("tag-txt-selected");
                    }	
                    $this.parent().find(".tag-txt-selected").each(function(){
                            var tag_val=$(this).data('val');
                            var tag_recid=$this.data('recid');
                            val +=tag_val+",";
                            recid += tag_recid+",";
                    });

                    val = val.substring(0,val.length-1);
                    recid = recid.substring(0,recid.length-1);

                    $this.siblings("#impression").val(val); //隐藏input value值
            });
            //删除图片
            $(".delete_commentImg").click(function(){
                    var box = $(this).parents(".upload-img-box");
                    var cur_imgId = $(this).prev().attr("data-imgid");
                    var order_id = box.find("input[name=order_id]").val();
                    var goods_id = box.find("input[name=goods_id]").val();

                    if(cur_imgId == ""){
                            alert('提交参数有误！');return false;
                    }
                    Ajax.call('comment.php?act=del_pictures', 'cur_imgId=' + cur_imgId+'&order_id='+order_id+'&goods_id='+goods_id, delCommentImgResponse, 'POST', 'JSON');

