                            {foreach from=$shipping_area.point item=field}
                            <div class="item"> 	
                                  <a href="javascript:void(0);" class="since_delete" onclick="remove_point_pro({$field.id}, '{$lang.remove_confirm}', 'remove_point')">{$lang.drop}</a>
