                                  <p><label>{$lang.arrival_route}：</label><textarea cols="50" rows="5" name="line[]">{$field.line}</textarea></p>
                                  <input type="hidden" value="{$field.id}" name="point_id[]">
                                  <input type="hidden" value="{$field.img_url}" name="map_img[]">
